@model List<Product>

    <div class="container w-75 mt-4">
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="col-2">Product Number</th>
            <th class="col-8">Name</th>
            <th class="col-2">Price</th>
        </tr>
    </thead>
    <tbody>
        

        @{
            var fullprice = 0.0;
            var number = 1;
        }
        @foreach (Product prod in Model)
        {
            
            fullprice = fullprice + prod.Price;
            <tr>
                <td>@number</td>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Cart" asp-route-id="@prod.ProductId"><i class="bi bi-x"></i></a></td>
            </tr>
            number = number + 1;
        }

        
        </tbody>
        </table>

        <div class="row text-end">
            <p>Total Price: $@fullprice</p>
        </div>
    @if(fullprice != 0.0)
    {
        <div class="row text-end">
            <a class="btn btn-outline-primary">Proceed to checkout</a>
        </div>
    }
   
</div>

