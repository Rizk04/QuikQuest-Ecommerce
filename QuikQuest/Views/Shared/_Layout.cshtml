<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuikQuest</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuikQuest.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="w-100">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-primary bg-primary box-shadow mb-0">
           
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">QuikQuest</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-light"  asp-controller="Products" asp-action="Shop">Shop</a>
                        </li>
                        <li>
                            <a class="nav-link text-light"  asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li>
                            <a class="nav-link text-light"  asp-controller="Feedback" asp-action="AddReview">Send Reviews</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" a asp-controller="Feedback" asp-action="AddQuestion">Send Questions</a>
                        </li>
                        
                    </ul>

                    <ul class="navbar-nav justify-content-end">
                            <partial name="_LoginPartial.cshtml" class="text-light" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <main role="main" class="px-0">
            @RenderBody()
        </main>
    
    <footer class="footer bg-primary">
        <span class="text-end mx-4">
                <a href="https://www.x.com"><i class="bi bi-twitter text-light social"></i></a>
                <a href="https://www.facebook.com"><i class="bi bi-facebook text-light social"></i></a>
                <a href="https://www.youtube.com"><i class="bi bi-youtube text-light social"></i></a>
        </span>
  
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
