@model Product
@using Microsoft.AspNetCore.Identity
@using QuikQuest.Areas.Identity.Data

@inject UserManager<QuikQuestUser> UserManager
@inject SignInManager<QuikQuestUser> SignInManager

@if (User.IsInRole("Admin"))
{
    <div class="container mt-2">
        <div class="row">
            <div class="col-2">
        <a class="btn btn-primary rounded" asp-action="Edit" asp-route-id="@Model.ProductId" asp-controller="Products"><i class="bi bi-pencil-square"></i> Edit</a>

    </div>
            <div class="col-2">
                <a class="btn btn-danger rounded" asp-action="Delete" asp-route-id="@Model.ProductId" asp-controller="Products"> <i class="bi bi-trash"></i> Delete</a>
            </div>
    </div>
        </div>

   
}
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.ImgURL" /></div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Name</h1>
                <div class="fs-5 mb-5">
                    <span>$@Model.Price</span>
                    
                </div>
                <p class="lead">@Model.Description</p>
                <div class="d-flex">

                    <form asp-controller="Cart" asp-action="Add" asp-route-id="@Model.ProductId" method="post">
                        <button type="submit" class="btn btn-outline-dark flex-shrink-0">
                            <i class="bi-cart-fill me-1"></i>
                            Add to cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

